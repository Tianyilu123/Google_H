// method 1:
class Solution {
    public String minWindow(String S, String T) {
        int lenS = S.length(), lenT = T.length();
        int len = Integer.MAX_VALUE;
        int idxS = 0, idxT = 0;
        
        char[] cs = S.toCharArray();
        char[] ct = T.toCharArray();
        String res = "";
        
        while(idxS < lenS) {
            if(cs[idxS] == ct[idxT]) {
                idxT++;
                if(idxT == lenT) {
                    int end = idxS + 1;
                    idxT--;
                    while(idxT>=0) {
                        if(cs[idxS] == ct[idxT]) {
                            idxT--;
                        }
                        idxS--;
                    }
                    idxS++;
                    idxT++;
                    if(end - idxS<len) {
                        len = end - idxS;
                        res = S.substring(idxS, end);
                    }
                }
            }
            idxS++;
        }
        
        return len == Integer.MAX_VALUE ? "" : res;
    }
}


// method 2:
class Solution {
    public String minWindow(String S, String T) {
        int m = T.length(), n = S.length();
        int[][] dp = new int[m + 1][n + 1];
        for (int j = 0; j <= n; j++) {
            dp[0][j] = j + 1;
        }
        for (int i = 1; i <= m; i++) {
            for (int j = 1; j <= n; j++) {
                if (T.charAt(i - 1) == S.charAt(j - 1)) {
                    dp[i][j] = dp[i - 1][j - 1];
                } else {
                    dp[i][j] = dp[i][j - 1];
                }
            }
        }

        int start = 0, len = n + 1;
        for (int j = 1; j <= n; j++) {
            if (dp[m][j] != 0) {
                if (j - dp[m][j] + 1 < len) {
                    start = dp[m][j] - 1;
                    len = j - dp[m][j] + 1;
                }
            }
        }
        return len == n + 1 ? "" : S.substring(start, start + len);
    }
}
